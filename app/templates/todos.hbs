<section id="todoapp">
  <header id="header">
    <h1>todos</h1>

    {{input type="text" id="new-todo" value=new-todo placeholder="What needs to be done?" enter=(action "createTodo")}}

  </header>

  <section id="main">
    <ul id="todo-list">
      {{#each model as |todo|}}
        <li>
          <input type="checkbox" class="toggle">
          <label id="{{todo.id}}">{{todo.title}}</label>
          <button class="destroy"></button>
        </li>
      {{/each}}
    </ul>
    <input type="checkbox" id="toggle-all">
  </section>

  <footer id="footer">
    <span id="todo-count">
      <strong>{{model.length}}</strong> todos left
    </span>
    <ul id="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        <a href="active">Active</a>
      </li>
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>

    <button id="clear-completed">
      Clear completed (1)
    </button>
  </footer>
</section>

<footer id="info">
  <p>Double-click to edit a todo</p>
</footer>